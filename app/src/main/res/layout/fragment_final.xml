<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.Fragments.FinalFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#f1f1f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto: $"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/textViewFinalMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Monto"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metodo de Pago: "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/textViewFinalMetodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Metodo"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banco: "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/textViewFinalMBanco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Banco"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuotas: "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/textViewFinalMCuotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cuotas"
            android:textSize="20dp"/>



    </LinearLayout>
    <Button
        android:id="@+id/cmdNextFinal"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Hacer un nuevo pago  "
        android:background="@drawable/button_shape"
        android:backgroundTint= "#0e82ff"
        />
    </LinearLayout>

</android.support.v7.widget.CardView>